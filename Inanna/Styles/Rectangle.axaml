<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style Selector="Rectangle">
        <Setter Property="Margin" Value="2" />
    </Style>

    <Style Selector="Rectangle.drop-aria">
        <Setter Property="StrokeDashArray" Value="4,2" />
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="Stroke" Value="{DynamicResource ButtonForeground}" />
        <Setter Property="RadiusX" Value="5" />
        <Setter Property="RadiusY" Value="5" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="Fill" Value="Transparent" />
    </Style>

    <Style Selector="Rectangle.drop-aria:pointerover">
        <Setter Property="Fill" Value="{DynamicResource ComboBoxItemBackgroundPointerOver}" />
    </Style>
</Styles>