<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:h="clr-namespace:Inanna.Helpers"
        xmlns:s="clr-namespace:System;assembly=System.Runtime">
    <Style Selector="TextBox">
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style Selector="TextBox.password">
        <Setter Property="PasswordChar" Value="*" />
        <Setter Property="InnerRightContent">
            <Template>
                <Button Classes="password-visibility" h:ButtonAssist.IsDragHandle="True" />
            </Template>
        </Setter>
    </Style>

    <Style Selector="TextBox:show-password">
        <Setter Property="PasswordChar" Value="*" />
    </Style>

    <Style Selector="TextBox:hide-password">
        <Setter Property="PasswordChar" Value="{x:Static s:Char.MinValue}" />
    </Style>
</Styles>