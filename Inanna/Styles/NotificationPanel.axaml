<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:Inanna.Controls">
    <ControlTheme x:Key="NotificationPanelStyle" TargetType="c:NotificationPanel">
        <Setter Property="Template">
            <ControlTemplate>
                <Panel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <ContentPresenter Content="{TemplateBinding Content}" />
                    <ItemsControl HorizontalAlignment="Left" VerticalAlignment="Top" ItemsSource="{TemplateBinding TopLeftNotifications}"/>
                    <ItemsControl HorizontalAlignment="Right" VerticalAlignment="Top" ItemsSource="{TemplateBinding TopRightNotifications}"/>
                    <ItemsControl HorizontalAlignment="Left" VerticalAlignment="Bottom" ItemsSource="{TemplateBinding BottomLeftNotifications}"/>
                    <ItemsControl HorizontalAlignment="Right" VerticalAlignment="Bottom" ItemsSource="{TemplateBinding BottomRightNotifications}"/>
                    <ItemsControl HorizontalAlignment="Center" VerticalAlignment="Center" ItemsSource="{TemplateBinding CenterNotifications}"/>
                    <ItemsControl HorizontalAlignment="Left" VerticalAlignment="Center" ItemsSource="{TemplateBinding LeftCenterNotifications}"/>
                    <ItemsControl HorizontalAlignment="Right" VerticalAlignment="Center" ItemsSource="{TemplateBinding RightCenterNotifications}"/>
                    <ItemsControl HorizontalAlignment="Center" VerticalAlignment="Top" ItemsSource="{TemplateBinding TopCenterNotifications}"/>
                    <ItemsControl HorizontalAlignment="Center" VerticalAlignment="Bottom" ItemsSource="{TemplateBinding BottomCenterNotifications}"/>
                </Panel>
            </ControlTemplate>
        </Setter>
    </ControlTheme>

    <ControlTheme x:Key="{x:Type c:NotificationPanel}"
                  BasedOn="{StaticResource NotificationPanelStyle}"
                  TargetType="c:NotificationPanel" />
</ResourceDictionary>