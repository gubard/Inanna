<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:Inanna.Controls;assembly=Inanna">
    <Style Selector=":is(TopLevel):dragging :is(Visual).for-drop">
        <Setter Property="IsVisible" Value="True" />
    </Style>

    <Style Selector=":is(TopLevel):extra-small c|DialogControl.adaptive-dialog-control">
        <Setter Property="WidthDialog"
                Value="{Binding $parent[TopLevel].Width, Converter={StaticResource DoubleToPercentsConverter}, ConverterParameter=0.95}" />
        <Setter Property="MaxHeightDialog"
                Value="{Binding $parent[TopLevel].Height, Converter={StaticResource DoubleToPercentsConverter}, ConverterParameter=0.95}" />
    </Style>

    <Style Selector=":is(TopLevel):small c|DialogControl.adaptive-dialog-control">
        <Setter Property="WidthDialog"
                Value="{Binding $parent[TopLevel].Width, Converter={StaticResource DoubleToPercentsConverter}, ConverterParameter=0.85}" />
        <Setter Property="MaxHeightDialog"
                Value="{Binding $parent[TopLevel].Height, Converter={StaticResource DoubleToPercentsConverter}, ConverterParameter=0.95}" />
    </Style>

    <Style Selector=":is(TopLevel):medium c|DialogControl.adaptive-dialog-control">
        <Setter Property="WidthDialog"
                Value="{Binding $parent[TopLevel].Width, Converter={StaticResource DoubleToPercentsConverter}, ConverterParameter=0.70}" />
        <Setter Property="MaxHeightDialog"
                Value="{Binding $parent[TopLevel].Height, Converter={StaticResource DoubleToPercentsConverter}, ConverterParameter=0.95}" />
    </Style>

    <Style Selector=":is(TopLevel):large c|DialogControl.adaptive-dialog-control">
        <Setter Property="WidthDialog"
                Value="{Binding $parent[TopLevel].Width, Converter={StaticResource DoubleToPercentsConverter}, ConverterParameter=0.5}" />
        <Setter Property="MaxHeightDialog"
                Value="{Binding $parent[TopLevel].Height, Converter={StaticResource DoubleToPercentsConverter}, ConverterParameter=0.95}" />
    </Style>

    <Style Selector=":is(TopLevel):extra-large c|DialogControl.adaptive-dialog-control">
        <Setter Property="WidthDialog"
                Value="{Binding $parent[TopLevel].Width, Converter={StaticResource DoubleToPercentsConverter}, ConverterParameter=0.5}" />
        <Setter Property="MaxHeightDialog"
                Value="{Binding $parent[TopLevel].Height, Converter={StaticResource DoubleToPercentsConverter}, ConverterParameter=0.95}" />
    </Style>
</Styles>